# Example .env file for RAG Finance Tracking System
# Copy this to .env and customize for your setup

# Data directories
DATA_DIR=data
VECTOR_DB_DIR=data/vectordb
MODELS_DIR=models

# Embedding model configuration
# Options: sentence-transformers/all-MiniLM-L6-v2 (default, lightweight)
#          sentence-transformers/all-mpnet-base-v2 (better quality, larger)
#          sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (multilingual)
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Document processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval settings
TOP_K=4

# Vector store settings
COLLECTION_NAME=finance_docs

# Local LLM settings (optional)
# Set this if you have a local LLM model
# LLM_MODEL_PATH=models/llama-2-7b-chat.gguf
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512
